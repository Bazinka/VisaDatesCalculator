<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout android:id="@+id/choose_enter_date_layout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="20dp"
                  app:layout_constraintTop_toTopOf="parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата въезда"/>
        <TextView
                android:id="@+id/enter_date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/choose_leave_date_layout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="20dp"
                  app:layout_constraintTop_toBottomOf="@+id/choose_enter_date_layout">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата выезда"/>
        <TextView
                android:id="@+id/leave_date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="@string/save_button"
            android:textColor="@color/primary_text"
            android:layout_margin="18dp" tools:layout_editor_absoluteX="19dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/choose_leave_date_layout"/>
</androidx.constraintlayout.widget.ConstraintLayout>